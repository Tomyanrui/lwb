/* components/empty/index.wxss */

.empty-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  background: #fff;
}
.empty-wrap .empty-img{
  width: 320rpx;
  height: 200rpx;
  margin-top: 130rpx;
  margin-bottom: 64rpx;
}
.empty-wrap .title{
  font-size: 32rpx;
  color: var(--blodTitle);
  line-height: 46rpx;
  font-weight: 600;
}
.empty-wrap .info{
  font-size: 25rpx;
  color: var(--textLight);
}
.empty-wrap .btn{
  color: var(--blodTitle);
  font-weight: 500;
  border-radius: 6rpx;
  line-height: 68rpx;
  padding: 0 32rpx;
  margin: 48rpx 0;
  border: 1px solid var(--blodTitle);
  text-align: center;
  min-width: 220rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.from-addrlist-btn {
  position: absolute;
  height: 166rpx;
  bottom: 0;
  background-color: var(--white);
}
.from-addrlist-btn-text {
  width: 678rpx;
  height: 82rpx;
  margin: 13rpx auto;
  background-color: var(--blodTitle);
  text-align: center;
  line-height: 82rpx;
  font-size: 25rpx;
  color: var(--white);
  font-weight: 500;
  border-radius: 7rpx;
}