.uni-picker-input {
  display: flex;
  flex-direction: space-between;
  border-radius: 5px;
  border: 1px #000 solid;
}

.picker-item-input {
  margin-left: 10rpx;
  width: 80%;
  height: 100%;
  line-height: 24rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.uni-picker-icon {
  width: 100%;
  height: 100%;
  /* background: red; */
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.img {
  width: 60rpx;
  height: 60rpx;
  margin-right:10rpx; 
}
